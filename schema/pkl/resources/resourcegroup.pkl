module azure.resources.resourcegroup

import "@formae/formae.pkl"
import "../azure.pkl"

const type = "Azure::Resources::ResourceGroup"
const apiVersion = "2024-03-01"

open class ResourceGroupResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden id: ResourceGroupResolvable = (this) {
        property = "id"
    }
    hidden name: ResourceGroupResolvable = (this) {
        property = "name"
    }
}

@azure.ResourceHint {
    type = module.type
    identifier = "id"
    apiVersion = module.apiVersion
}
open class ResourceGroup extends formae.Resource {

    // Required properties
    @azure.FieldHint { required = true; createOnly = true }
    name: String(matches(Regex(#"^[-\w\._\(\)]+$"#)) && length <= 90 && length >= 1)

    @azure.FieldHint { required = true; createOnly = true }
    location: azure.Location

    // Optional properties
    // Note: outputField = "Tags" is required because Azure's ResourceHint doesn't have
    // automatic field capitalization like AWS. The Go code expects uppercase "Tags".
    @azure.FieldHint { outputField = "Tags" }
    tags: Listing<azure.Tag>?

    @azure.FieldHint
    managedBy: String?

    hidden parent = this

    hidden res: ResourceGroupResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}
