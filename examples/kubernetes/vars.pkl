import "@formae/formae.pkl"
import "@azure/azure.pkl"

projectName = "azure-kubernetes"

stackName = "azure-kubernetes-eastus"

location = "eastus"

subscriptionId = read?("env:AZURE_SUBSCRIPTION_ID") ?? "your-subscription-id"

vnetCidr = "10.0.0.0/16"

aksSubnetCidr = "10.0.0.0/22"

dnsPrefix = "aks"

stack: formae.Stack = new {
    label = stackName
    description = "AKS cluster with container registry"
}

target: formae.Target = new formae.Target {
    label = "kubernetes-target-azure"
    config = new azure.Config {
        subscriptionId = module.subscriptionId
    }
}
