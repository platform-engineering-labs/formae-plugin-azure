import "@formae/formae.pkl"
import "@azure/azure.pkl"

projectName = "azure-networking"

stackName = "azure-networking-eastus"

location = "eastus"

subscriptionId = read?("env:AZURE_SUBSCRIPTION_ID") ?? "ddfe7ebf-ba62-442b-b915-24f71b04e63b"

vnetCidr = "10.0.0.0/16"

subnetCidr = "10.0.1.0/24"

stack: formae.Stack = new {
    label = stackName
    description = "Basic Azure networking infrastructure"
}

target: formae.Target = new formae.Target {
    label = "networking-target-azure"
    config = new azure.Config {
        subscriptionId = module.subscriptionId
    }
}
