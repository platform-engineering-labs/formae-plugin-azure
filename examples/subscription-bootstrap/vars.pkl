import "@formae/formae.pkl"
import "@azure/azure.pkl"

projectName = "myorg"

stackName = "subscription-bootstrap"

location = "eastus"

subscriptionId = read?("env:AZURE_SUBSCRIPTION_ID") ?? "ddfe7ebf-ba62-442b-b915-24f71b04e63b"

// Azure built-in role definition IDs
contributorRoleId = "b24988ac-6180-42a0-ab88-20f7382dd24c"
readerRoleId = "acdd72a7-3385-48ef-bd42-f606fba81ae7"

stack: formae.Stack = new {
    label = stackName
    description = "Subscription bootstrap - managed identities and RBAC"
}

target: formae.Target = new formae.Target {
    label = "bootstrap-target-azure"
    config = new azure.Config {
        subscriptionId = module.subscriptionId
    }
}
