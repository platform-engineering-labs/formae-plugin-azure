amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"
import "@azure/resources/virtualnetwork.pkl"

local stackName = "plugin-sdk-test-vnet-stack"
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local rg = new resourcegroup.ResourceGroup {
  label = "vnet-test-rg"
  name = "formae-plugin-sdk-test-vnet-rg-\(testRunID)"
  location = "eastus"
}

local vnetAddressSpace = new virtualnetwork.AddressSpace {
  addressPrefixes = new Listing {
    "10.0.0.0/16"
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure VirtualNetwork"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "ddfe7ebf-ba62-442b-b915-24f71b04e63b"
    }
  }

  rg

  new virtualnetwork.VirtualNetwork {
    label = "plugin-sdk-test-vnet"
    name = "formae-plugin-sdk-test-vnet-\(testRunID)"
    location = "eastus"
    resourceGroupName = rg.res.name
    addressSpace = vnetAddressSpace
    // Update: Add tags (non-createOnly field)
    tags = new Listing {
      new azure.Tag { key = "Environment"; value = "updated" }
    }
  }
}
