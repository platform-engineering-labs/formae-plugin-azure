amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"
import "@azure/network/publicipaddress.pkl"

local stackName = "plugin-sdk-test-pip-stack"
// Read the test run ID from environment variable set by the test harness
// This ensures consistent naming within a test run but unique names between runs
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local rg = new resourcegroup.ResourceGroup {
  label = "pip-test-rg"
  name = "formae-plugin-sdk-test-pip-rg-\(testRunID)"
  location = "eastus"
}

// Define sku as local to avoid SDK test patch logic targeting it
local pipSku = new publicipaddress.PublicIPAddressSKU {
  name = "Standard"
  tier = "Regional"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure PublicIPAddress"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "ddfe7ebf-ba62-442b-b915-24f71b04e63b"
    }
  }

  rg

  new publicipaddress.PublicIPAddress {
    label = "plugin-sdk-test-pip"
    name = "formae-plugin-sdk-test-pip-\(testRunID)"
    location = "eastus"
    resourceGroupName = rg.res.name
    sku = pipSku
    publicIPAllocationMethod = "Static"
  }
}
