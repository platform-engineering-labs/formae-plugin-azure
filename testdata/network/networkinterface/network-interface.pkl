amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"
import "@azure/resources/virtualnetwork.pkl"
import "@azure/resources/subnet.pkl"
import "@azure/network/networkinterface.pkl"

local stackName = "plugin-sdk-test-nic-stack"
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local rg = new resourcegroup.ResourceGroup {
  label = "nic-test-rg"
  name = "formae-plugin-sdk-test-nic-rg-\(testRunID)"
  location = "eastus"
}

local vnetAddressSpace = new virtualnetwork.AddressSpace {
  addressPrefixes = new Listing {
    "10.0.0.0/16"
  }
}

local vnet = new virtualnetwork.VirtualNetwork {
  label = "nic-test-vnet"
  name = "formae-plugin-sdk-test-nic-vnet-\(testRunID)"
  location = "eastus"
  resourceGroupName = rg.res.name
  addressSpace = vnetAddressSpace
}

local sn = new subnet.Subnet {
  label = "nic-test-subnet"
  name = "formae-plugin-sdk-test-nic-subnet-\(testRunID)"
  resourceGroupName = rg.res.name
  virtualNetworkName = vnet.res.name
  addressPrefix = "10.0.1.0/24"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure NetworkInterface"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "ddfe7ebf-ba62-442b-b915-24f71b04e63b"
    }
  }

  rg
  vnet
  sn

  new networkinterface.NetworkInterface {
    label = "plugin-sdk-test-nic"
    name = "formae-plugin-sdk-test-nic-\(testRunID)"
    location = "eastus"
    resourceGroupName = rg.res.name
    ipConfigurations = new Listing {
      new networkinterface.IPConfiguration {
        name = "primary"
        subnet = sn.res.id
        privateIPAllocationMethod = "Dynamic"
        primary = true
      }
    }
  }
}
