amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"
import "@azure/resources/virtualnetwork.pkl"
import "@azure/resources/subnet.pkl"

local stackName = "plugin-sdk-test-subnet-stack"
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local rg = new resourcegroup.ResourceGroup {
  label = "subnet-test-rg"
  name = "formae-plugin-sdk-test-subnet-rg-\(testRunID)"
  location = "eastus"
}

local vnetAddressSpace = new virtualnetwork.AddressSpace {
  addressPrefixes = new Listing {
    "10.0.0.0/16"
  }
}

local vnet = new virtualnetwork.VirtualNetwork {
  label = "subnet-test-vnet"
  name = "formae-plugin-sdk-test-subnet-vnet-\(testRunID)"
  location = "eastus"
  resourceGroupName = rg.res.name
  addressSpace = vnetAddressSpace
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure Subnet"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "b161e970-a04d-48a4-ac91-18d06e8d8047"
    }
  }

  rg

  vnet

  // Update: Change addressPrefix (the only updatable field for Subnet - no tags support)
  new subnet.Subnet {
    label = "plugin-sdk-test-subnet"
    name = "formae-plugin-sdk-test-subnet-\(testRunID)"
    resourceGroupName = rg.res.name
    virtualNetworkName = vnet.res.name
    addressPrefix = "10.0.2.0/24"  // Changed from 10.0.1.0/24 to 10.0.2.0/24
  }
}
