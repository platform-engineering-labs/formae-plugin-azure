amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"
import "@azure/dbforpostgresql/flexibleserver.pkl"
import "@azure/dbforpostgresql/firewallrule.pkl"

local stackName = "plugin-sdk-test-fwr-stack"
local testRunID = read("env:FORMAE_TEST_RUN_ID")

local rg = new resourcegroup.ResourceGroup {
  label = "fwr-test-rg"
  name = "formae-plugin-sdk-test-fwr-rg-\(testRunID)"
  location = "westus2"
}

local pg = new flexibleserver.FlexibleServer {
  label = "fwr-test-pg"
  name = "fpsdt-fwr-pg-\(testRunID)"
  location = "westus2"
  resourceGroupName = rg.res.name
  sku = new flexibleserver.SKU {
    name = "Standard_B1ms"
    tier = "Burstable"
  }
  version = "16"
  administratorLogin = "pgadmin"
  administratorLoginPassword = "T3stP@ssw0rd!"
  storage = new flexibleserver.Storage {
    storageSizeGB = 32
    autoGrow = "Disabled"
    tier = "P4"
    iops = 120
  }
  backup = new flexibleserver.Backup {
    backupRetentionDays = 7
    geoRedundantBackup = "Disabled"
  }
  highAvailability = new flexibleserver.HighAvailability {
    mode = "Disabled"
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure FirewallRule"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "ddfe7ebf-ba62-442b-b915-24f71b04e63b"
    }
  }

  rg
  pg

  // Update: Change IP range (non-createOnly fields)
  new firewallrule.FirewallRule {
    label = "plugin-sdk-test-fwr"
    name = "fpsdt-fwr-\(testRunID)"
    resourceGroupName = rg.res.name
    serverName = pg.res.name
    startIpAddress = "10.0.0.1"
    endIpAddress = "10.0.0.50"
  }
}
