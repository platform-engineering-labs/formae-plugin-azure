amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@azure/azure.pkl"

import "@azure/resources/resourcegroup.pkl"

local stackName = "plugin-sdk-test-rg-stack"
// Read the test run ID from environment variable set by the test harness
// This ensures consistent naming within a test run but unique names between runs
local testRunID = read("env:FORMAE_TEST_RUN_ID")

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Azure Resource Group"
  }

  new formae.Target {
    label = "azure-target"
    config = new azure.Config {
      subscriptionId = "b161e970-a04d-48a4-ac91-18d06e8d8047"
    }
  }

  new resourcegroup.ResourceGroup {
    label = "plugin-sdk-test-rg"
    name = "formae-plugin-sdk-test-rg-\(testRunID)"
    location = "eastus"
  }
}
